{
    "compilerOptions": {
      "target": "ESNext",          
      "module": "ESNext",          
      "strict": true,              
      "esModuleInterop": true,     
      "moduleResolution": "Node",  
      "resolveJsonModule": true    
    },
    "include": ["src"],             
    "parserOptions": {
      "project": "./tsconfig.json",
      "tsconfigRootDir": "./",
      "ecmaVersion": 2022,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    }
  }
  